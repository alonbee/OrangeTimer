<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background"> 
	<RelativeLayout 
	    
		android:layout_width="320dp"
		android:layout_height="415dp"
		android:layout_marginTop="60dp"
		android:background="@drawable/bigframe">
		<Button
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:id="@+id/add"
		    android:background="@drawable/add"
		    android:layout_marginLeft="270dp"
		    android:layout_marginTop="365dp"/>     //tianjia

		<TextView
		      android:layout_width="20dp"
		      android:layout_height="280dp"
		      android:id="@+id/temperaturegauge"
		      android:layout_marginTop="50dp"
		      android:layout_marginLeft="5dp"
		      android:background="@drawable/temperaturegauge">    //wenduji
		    
		</TextView> 
		<ListView 
                android:id="@+id/lv"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_width="260dp"
                android:layout_height="320dp"
                >
            </ListView>           zhongjianshuju
		<TextView
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:id="@+id/tempreturenumber"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="340dp"

		    />            //wendujizhi
		    <TextView
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:id="@+id/undone"
		        android:textColor="#000000"
		        android:layout_marginTop="370dp"
		        android:layout_marginLeft="225dp"
		        android:gravity="center|top"
		        android:background="@drawable/undonenonumber"
		        />             undone  anniu
		<TextView 
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:id="@+id/done"
		    android:gravity="center|top"
		    
		    android:textColor="#FF7F00"
		    android:layout_marginTop="370dp"
		    android:background="@drawable/donenonumber"
		    android:layout_marginLeft="185dp"/>				done anniu        
	</RelativeLayout>

    

    <Button
        android:id="@+id/trashcan"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/trashcan"/>        //lajitong
    
    
     <Button
         android:layout_width="40dp"
         android:layout_height="60dp"
         android:id="@+id/set"
         android:background="@drawable/set"
		 android:layout_marginTop="475dp"
         android:layout_marginLeft="270dp"/>          //shezhi
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/numberuptrashcan"
             android:textColor="#FF7F00"
             android:gravity="center"
             android:layout_marginLeft="60dp"
             android:layout_above="@id/trashcan"
             android:background="@drawable/numberuptrashcan"/>

       //lajitongshangdeshuzi   
             
</RelativeLayout>